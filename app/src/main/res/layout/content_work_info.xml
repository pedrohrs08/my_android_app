<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_work_info"
    tools:context="com.example.pedroresende.curriculum.WorkInfo"
    android:orientation="vertical">

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:name="com.example.pedroresende.curriculum.BlankFragment"
        android:id="@+id/fragment2"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/fragment_blank" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/generalInfo"
        android:id="@+id/btnGeneralInfo"
        style="@style/mainButtons" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/schoolInfo"
        android:id="@+id/btnSchoolInfo"
        style="@style/mainButtons" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            style="@style/mainButtons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/editInfo"
            android:id="@+id/button2"
            android:drawableLeft="@android:drawable/ic_menu_edit"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>
