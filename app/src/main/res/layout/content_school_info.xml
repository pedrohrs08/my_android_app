<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_schoo_info"
    tools:context="com.example.pedroresende.curriculum.activities.SchoolInfo"
    android:orientation="vertical">

    <fragment
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:name="com.example.pedroresende.curriculum.activities.fragments.BlankFragment"
            android:id="@+id/fragment"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tools:layout="@layout/fragment_blank" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/graduation"
        android:id="@+id/lblGraduation"
        style="@style/viewTitles" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView4"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/postGraduation"
        android:id="@+id/lblPostGraduation"
        style="@style/viewTitles" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView6"
        android:layout_marginBottom="10dp" />

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="General Info"
            android:id="@+id/btnGeneralInfo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
        style="@style/mainButtons" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Work Information"
        android:id="@+id/btnWorkInfo"
        style="@style/mainButtons" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            style="@style/mainButtons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/editInfo"
            android:id="@+id/button"
            android:drawableLeft="@android:drawable/ic_menu_edit"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>
