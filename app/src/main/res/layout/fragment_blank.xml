<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pedroresende.curriculum.activities.fragments.BlankFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgViewProfile"
        android:layout_gravity="left|top"
        android:background="@mipmap/my_picture"
        android:baseline="@dimen/abc_action_bar_default_height_material"
        android:baselineAlignBottom="false"
        style="@style/viewImages" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="44dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pedro Henrique Resende Soares"
        android:id="@+id/lblName"
        android:layout_gravity="right|top"
        style="@style/viewTitles" />

</FrameLayout>
